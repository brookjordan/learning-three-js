{
  "license": "MIT",
  "dependencies": {
    "dat.gui": "^0.7.7",
    "three": "^0.125.2"
  },
  "scripts": {
    "clean": "rm -rf three/modules",
    "build:modules": "yarn clean && cp -r node_modules three/modules",
    "build:tsc": "yarn tsc --p tsconfig.json",
    "dev:tsc": "yarn tsc --p tsconfig.json --watch",
    "eslint": "eslint \"**/*.js\" --fix --quiet",
    "prettier": "prettier \"**/*{.js,.html,.css,.json}\" --write  --loglevel warn",
    "format": "yarn prettier && yarn eslint",
    "build": "yarn build:modules && yarn build:tsc && yarn prettier"
  },
  "devDependencies": {
    "@types/dat.gui": "^0.7.6",
    "eslint": "^7.28.0",
    "eslint-plugin-import": "^2.23.4",
    "prettier": "^2.3.1",
    "typescript": "^4.3.2"
  }
}
